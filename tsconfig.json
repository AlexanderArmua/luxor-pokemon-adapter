{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["ES2022", "esnext.asynciterable", "WebWorker"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictBindCallApply": false,
    "esModuleInterop": true,
    "paths": {
      "@health/*": ["health/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["lib/utils/*"],
      "@config": ["lib/config/index"],
      "@constants/*": ["lib/constants/*"],
      "@core/*": ["core/*"],
      "@db/*": ["lib/db/*"],
      "@dto/*": ["lib/dto/*"],
      "@enums/*": ["lib/enums/*"],
      "@interfaces": ["lib/interfaces"],
      "@imgix":  ["lib/imgix"],
      "@schemas/*": ["schemas/*"],
      "@resolvers/*": ["resolvers/*"],
      "@loaders": ["lib/loaders"],
      "@logger": ["lib/logger/index"],
      "@helpers/*": ["lib/helpers/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@middlewares/*": ["middlewares/*"],
      "@factories/*": ["factories/*"],
      "@external-services/*": ["external-services/*"],
      "@magentoLib/*": ["lib/magento/*"],
      "@unleashLib/*": ["lib/unleash/*"],
      "@ms-redis/*": ["lib/redis/*"],
      "@ms-axios/*": ["lib/axios/*"],
    }
  }
}
