{
  "name": "luxor-pokemon-adapter",
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "author": "alexanderarmua1@gmail.com",
  "private": true,
  "scripts": {
    "start:all": "docker-compose up -d && npm install && npm run migrate:prod && npm run prisma:generate && npm run dev",
    "dev": "nodemon",
    "worker": "npx ts-node -r tsconfig-paths/register ./src/workers/index.ts",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start:prod": "node ./dist/index.js",
    "start:prod:worker": "node ./dist/workers/index.js",
    "lint": "eslint \"{src}/**/*.ts\" --fix",
    "lint-report": "eslint --output-file ./eslint-report.json --format json src --ext .js,.jsx,.ts,.tsx",
    "prettier": "prettier --config .prettierrc \"{src}/**/*.ts\" --write",
    "prettier-fix": "node_modules/.bin/prettier -l \"{src}/**/*.ts\" --write",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:studio": "npx prisma studio",
    "migrate:dev": "npx prisma migrate dev --create-only --name",
    "migrate:reset": "npx prisma migrate reset",
    "migrate:prod": "npx prisma migrate deploy",
    "migrate:rollback": "npx prisma migrate resolve --rolled-back",
    "test": "jest --maxWorkers=2 --silent",
    "test:watch": "jest --watch --maxWorkers=2 --silent",
    "test:cov": "jest --coverage --maxWorkers=2 --silent",
    "docker:dev": "docker-compose -f docker-compose.yml up"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@prisma/client": "^4.4.0",
    "@types/compression": "^1.7.2",
    "dotenv": "^16.0.3",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.1",
    "graphql-request": "^6.1.0",
    "node-fetch": "^2.6.8",
    "pino": "^8.6.1",
    "pino-pretty": "^9.1.1",
    "prisma": "^4.4.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.1.1",
    "@types/mock-req-res": "^1.1.3",
    "@types/node": "^18.7.23",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.1",
    "jest-mock-extended": "^3.0.1",
    "lint-staged": "^13.0.3",
    "mock-req-res": "^1.2.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "tslib": "^2.6.1",
    "typescript": "^4.8.4"
  },
  "eslintIgnore": [
    "**/*.spec.ts",
    "**/*.test.js"
  ]
}
